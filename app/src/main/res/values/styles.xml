<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/color_white</item>
    </style>

    <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GuideAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <!--下订单页面radio-->
    <style name="btn_style_radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/radio_selector_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="radio_text_color">
        <item name="android:textColor">@color/radio_selector_text</item>
    </style>

    <style name="order_style_margin">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="btn_style_radio_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_selector_text_1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_selector_1</item>
    </style>

    <style name="button_style_base">
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="button_style_1" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_shape_bg</item>
    </style>

    <style name="button_style_2" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="button_style_3" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_shape_bg_3</item>
    </style>

    <style name="button_style_4" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_shape_bg_4</item>
    </style>

    <style name="button_style_5" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_shape_bg_7</item>
    </style>

    <style name="button_style_6" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_shape_bg_8</item>
    </style>

    <style name="button_style_7" parent="button_style_base">
        <item name="android:layout_width">183.5dp</item>
        <item name="android:layout_height">36.5dp</item>
        <item name="android:background">@drawable/button_shape_bg_9</item>
    </style>

    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="30dp"-->
    <style name="button_style_8" parent="button_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_shape_bg_2</item>
    </style>

    <style name="test001">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    //重构
    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/color_white</item>
        <item name="android:textColorPrimary">@color/text_6</item>
        <item name="actionMenuTextColor">@color/text_6</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/top_bar_bg</item>
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--表单标题-->
    <style name="FormTitleStyle">
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--表单输入框-->
    <style name="FormEditStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/text_bg</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--表单item-->
    <style name="FormItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--info item-->
    <style name="InfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>


    <!--info item-->
    <style name="UserInfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>
    <style name="UserInfoTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_6</item>
    </style>
    <style name="UserInfoEditStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_2</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
    </style>

    <!--lineStyle-->
    <style name="lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="updateNum">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">center</item>
    </style>


    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:clipToPadding="false"-->

    <!--android:background="@color/bg_1"-->
    <!--android:paddingTop="7dp"-->
    <!--android:paddingBottom="7dp"-->


    <style name="listStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@color/bg_1</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>


    <style name="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_6</item>
    </style>


    <style name="contentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_2</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
