<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/goods_pic_test"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_goods"
        android:text="广西白砂糖"
        android:textColor="@color/text_6"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/ll_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name"
        android:layout_toRightOf="@id/iv_goods"
        android:layout_marginTop="5dp">

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="正常颗粒"-->
            <!--android:textColor="@color/text_2"-->
            <!--android:textSize="12sp"/>-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="正常颗粒"-->
            <!--android:textColor="@color/text_2"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_marginLeft="10dp"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_attr"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/iv_goods">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:text="1包"
            android:textColor="@color/text_2"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="1dp"
            android:text="￥"
            android:textColor="@color/text_8"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="200"
            android:textColor="@color/text_8"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_below="@id/ll_price"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_goods"
        android:background="@drawable/button_selector"
        android:text="快速下单"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_add_cart"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_below="@id/ll_price"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/btn_order"
        android:background="@drawable/button_selector_add_cart"
        android:text="加入购物车"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_update_num"
        android:layout_width="93dp"
        android:layout_height="29dp"
        android:layout_below="@id/ll_price"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/btn_order"
        android:background="@drawable/button_shape_bg_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@id/iv_add"
            style="@style/updateNum"
            android:src="@drawable/btn_add"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="60000"/>

        <ImageView
            android:id="@id/iv_cut"
            style="@style/updateNum"
            android:src="@drawable/btn_cut"/>
    </LinearLayout>

</RelativeLayout>
