<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_1">

    <include
        layout="@layout/loading_layout_new"/>

    <include
        android:id="@+id/view_error"
        layout="@layout/view_error"
        android:layout_gravity="center"
        tools:ignore="IncludeLayoutParam"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:listitem="@layout/item_goods_test"
        android:layout_marginBottom="20dp"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="58dp"
        android:src="@drawable/shopping_cart_icon"
        app:fab_colorNormal="@color/colorAccent"
        app:fab_colorPressed="@color/colorAccentPress"
        app:fab_colorRipple="@color/colorAccentRipple"
        fab:ignore="RtlHardcoded"
        />
</FrameLayout>

