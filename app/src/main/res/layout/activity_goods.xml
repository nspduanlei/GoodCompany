<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_bar_layout_toolbar" />

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_goods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <!--android:layout_gravity="start"-->

    <!--菜单-->
    <FrameLayout
        android:id="@+id/menuFL"
        android:layout_width="218dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:clickable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/hello_bg"
            android:layout_marginLeft="22dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_logo"
                android:paddingLeft="22dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_4"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_user_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="客户,"
                    android:textColor="@color/color_text_4" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:text="登  录"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:background="@drawable/button_shape_bg_2"
                    android:textColor="@color/color_white"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/icon_left_menu"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="  我的帐号"
                android:textColor="@color/color_black"
                android:background="@drawable/ll_press_bg"
                android:paddingLeft="22dp"/>

            <TextView
                android:id="@+id/tv_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_left_menu"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="  我的订单"
                android:textColor="@color/color_black"
                android:background="@drawable/ll_press_bg"
                android:paddingLeft="22dp"/>

            <TextView
                android:id="@+id/tv_manage_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_left_menu"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="  地址管理"
                android:textColor="@color/color_black"
                android:background="@drawable/ll_press_bg"
                android:paddingLeft="22dp"/>

            <TextView
                android:id="@+id/tv_my_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_left_menu"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="  我的购物车"
                android:textColor="@color/color_black"
                android:background="@drawable/ll_press_bg"
                android:paddingLeft="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/icon_left_menu"
                android:gravity="center"
                android:text="  客服电话"
                android:textColor="@color/color_black"
                android:paddingLeft="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="5dp"
                android:text="4001000747"
                android:textColor="@color/color_text_2"
                android:paddingLeft="22dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login_out"
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            android:background="@drawable/button_shape_bg_7"
            android:text="登  出"
            android:textColor="@color/color_5"
            android:layout_marginLeft="22dp"/>
    </FrameLayout>


    <include layout="@layout/loading_layout" />
</android.support.v4.widget.DrawerLayout>