<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/widget_toolbar"/>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginBottom="10dp"
            android:background="@color/color_white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:tl_indicator_color="@color/color_white"
            app:tl_indicator_margin_left="2dp"
            app:tl_indicator_margin_right="2dp"
            app:tl_indicator_style="BLOCK"
            app:tl_tab_padding="12dp"
            app:tl_textBold="true"
            app:tl_textSelectColor="@color/tab_select"
            app:tl_textUnselectColor="@color/tab_unSelect"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <include
        layout="@layout/loading_layout_new"/>
</FrameLayout>