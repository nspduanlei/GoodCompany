<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_order_pro"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="订单待确认"
        android:background="@drawable/order_pro_bg_1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:textColor="@color/color_white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/tv_order_num"
        android:layout_toRightOf="@id/tv_order_pro"
        android:text="订单号：1501156161631611611616"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_text_4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"
        android:layout_below="@id/tv_order_num"
        android:id="@+id/line_1"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/line_1"
        android:layout_marginTop="10dp"
        android:src="@drawable/test"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白砂糖(正常颗粒)"
        android:textColor="@color/color_text_1"
        android:layout_below="@id/line_1"
        android:layout_toRightOf="@id/iv_goods_pic"
        android:layout_marginTop="10dp"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50kg/袋"
        android:layout_below="@id/tv_goods_name"
        android:layout_toRightOf="@id/iv_goods_pic"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_text_2"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥270.00"
        android:layout_below="@id/line_1"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_text_4"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:layout_below="@id/tv_price"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_text_4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"
        android:layout_below="@id/iv_goods_pic"
        android:id="@+id/line_2"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="总价：￥270.00"
        android:textSize="18sp"
        android:layout_below="@id/line_2"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=" 详情"
        android:drawableLeft="@drawable/icon_detail"
        android:textColor="@color/color_text_2"
        android:layout_below="@id/line_2"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"
        android:gravity="center"/>


</RelativeLayout>