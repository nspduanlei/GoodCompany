<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_order_pro"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_order_pro"
        android:gravity="center_vertical"
        android:textColor="@color/color_text_4" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_order_num"
        android:layout_marginTop="10dp"
        android:background="@color/color_line" />

    <com.apec.android.views.widget.NoScrollListView
        android:id="@+id/lv_sku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1"/>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/lv_sku"
        android:background="@color/color_line" />

    <TextView
        android:id="@id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/line_2"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_text_1"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line_2"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/icon_detail"
        android:gravity="center"
        android:text=" 详情"
        android:textColor="@color/color_text_2" />


</RelativeLayout>