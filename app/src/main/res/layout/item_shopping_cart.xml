<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/check_selector"
            android:gravity="center"
            android:focusable="false"/>

        <ImageView
            android:id="@+id/iv_lose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/cart_good_lose"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/test"
            android:layout_marginLeft="6dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_toRightOf="@id/ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/color_text_4"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_attr_name"
        android:layout_toRightOf="@id/ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/text_2"
        android:textSize="13sp"
        android:layout_below="@id/tv_goods_name"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="ï¿¥645.0"
        android:textColor="@color/text_6"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ll_head"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <include
        layout="@layout/layout_change_price"
        android:layout_width="93dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>