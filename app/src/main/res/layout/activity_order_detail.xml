<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.apec.android.domain.entities.order.Order"/>

        <import type="com.apec.android.domain.entities.transport.Deliveryman"/>

        <variable
            name="order"
            type="Order"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/widget_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_dot_black"/>

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="下单时间  2016-05-20 15:00"
                        android:textColor="@color/text_6"/>

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已签收"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/select_city"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_dot_black"/>

                    <!--订单号   546545454554646-->
                    <TextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@{@string/order_number(order.orderNo)}"
                        android:textColor="@color/text_6"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_dot_black"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_6"
                        android:text="@{order.orderAddress.name}"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_user_name"
                        android:textColor="@color/text_6"
                        android:text="@{order.orderAddress.phone}"/>

                    <TextView
                        android:id="@+id/tv_user_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_user_name"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_6"
                        android:text="@{order.orderAddress.detail}"
                        android:layout_marginLeft="20dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <com.apec.android.views.widget.NoScrollListView
                    android:id="@+id/lv_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_dot_black"/>

                    <TextView
                        android:id="@+id/tv_title_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@{@string/true_order_5(order.orderAmount)}"
                        android:textColor="@color/text_6"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_dot_black"/>

                    <TextView
                        android:id="@+id/tv_title_send_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="配送费        ￥0.0"
                        android:textColor="@color/text_6"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_dot_black"/>

                    <!--付款金额   ￥0.0-->
                    <TextView
                        android:id="@+id/tv_title_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@{@string/true_order_5(order.orderAmount)}"
                        android:textColor="@color/text_6"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    style="@style/InfoItemStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_dot_black"/>

                    <TextView
                        android:id="@+id/tv_title_function"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="付款方式    货到付款"
                        android:textColor="@color/text_6"/>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/loading_layout_new"/>

    </FrameLayout>
</layout>