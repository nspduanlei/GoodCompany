<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34.5dp"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/btn_cut"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:background="@drawable/btn_cut" />

    <TextView
        android:id="@+id/tv_add_count"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_centerHorizontal="true"
        android:text="5 x ï¿¥350.00"
        android:textSize="13sp"
        android:textColor="@color/color_text_5"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/tv_add_count"
        android:layout_centerHorizontal="true"
        android:text="@string/add_order_total"
        android:textSize="17sp"
        android:textColor="@color/color_text_1"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:background="@drawable/btn_add"
        android:layout_alignParentRight="true"/>

</RelativeLayout>