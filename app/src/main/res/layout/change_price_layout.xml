<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="34.5dp"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:background="@drawable/btn_add" />

    <TextView
        android:id="@+id/tv_add_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="5 x ￥350.00"
        android:textSize="13sp"
        android:textColor="@color/color_text_5"/>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add_count"
        android:layout_centerHorizontal="true"
        android:text="￥1,350.00"
        android:textSize="17sp"
        android:textColor="@color/color_text_1"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>


    <Button
        android:id="@+id/btn_cut"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_cut" />

</RelativeLayout>