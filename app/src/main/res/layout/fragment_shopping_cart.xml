<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_bar_layout" />

        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line_2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/cb_all_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/check_selector"
                android:text="  全选"
                android:textColor="@color/color_text_4" />

            <TextView
                android:id="@+id/tv_total_carts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/total_price_cart"
                android:textColor="@color/color_5"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_goto_pay"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/button_shape_bg_2"
                android:text="@string/goto_pay_btn"
                android:textColor="@color/color_white" />
        </FrameLayout>


    </LinearLayout>

    <include
        android:layout_marginTop="48dp"
        layout="@layout/loading_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
</FrameLayout>
