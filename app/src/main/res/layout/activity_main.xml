<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:text="登录" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="share"
            android:text="一键分享" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addData"
            android:text="插入数据" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="queryData"
            android:text="查询数据" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoGoods"
            android:text="商品展示" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="register"
            android:text="注册" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registerData"
            android:text="用户资料完善" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="shoppingCart"
            android:text="购物车" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="order"
            android:text="订单详情" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="myOrder"
            android:text="我的订单" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="editData"
            android:text="地址编辑" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="manageData"
            android:text="地址管理" />

    </LinearLayout>

</ScrollView>
