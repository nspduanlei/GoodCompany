<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        style="@style/order_style_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="净含量"
            android:textColor="@color/color_text_2" />

        <!--￥270(50kg/包)-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/color_text_4" />
    </FrameLayout>

    <FrameLayout
        style="@style/order_style_margin"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="数量"
            android:textColor="@color/color_text_2" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageButton
                android:id="@+id/btn_cut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_cut" />

            <EditText
                android:id="@+id/et_goods_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_text_1"
                android:textSize="18sp"
                android:background="@null"
                android:numeric="integer"/>

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_add" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="20dp"
        android:background="@color/color_line" />

    <TextView
        style="@style/order_style_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配送费：￥0.00"
        android:textColor="@color/color_text_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="*您的货物预计在3月2日18点送达"
        android:textColor="@color/color_5" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/add_order_total"
        android:textColor="@color/color_5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_add_shopping_cart"
        style="@style/button_style_2"
        android:layout_marginTop="15dp"
        android:text="加入购物车"
        android:layout_marginBottom="40dp"/>

</LinearLayout>